<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/past7"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="296dp"
        android:text="Average Heart Rate (BPM) :"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/avg_hr_"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="296dp"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/past2"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/past6"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="256dp"
        android:text="Max. Heart Rate (BPM) :"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/max_hr_"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="256dp"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/past2"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/past5"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="196dp"
        android:text="Average Speed (km/h) :"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/average_speed_"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="196dp"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/past2"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/past4"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="156dp"
        android:text="Top Speed (km/h) :"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/top_speed_"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="156dp"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/past2"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/past3"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="116dp"
        android:text="Distance Covered (km) :"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/distance_"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="116dp"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/past2"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/past1"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Date :"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/date"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/past2"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:visibility="invisible" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="363dp"
        android:layout_height="47dp"
        android:layout_marginTop="92dp"
        android:background="?attr/colorButtonNormal"
        android:gravity="center"
        android:persistentDrawingCache="scrolling"
        android:popupBackground="?attr/colorButtonNormal"
        android:popupTheme="@style/TextAppearance.AppCompat.Medium"
        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/past2"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="56dp"
        android:text="Total Time (mins) :"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/time_"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/past2"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/warning2"
        android:layout_width="352dp"
        android:layout_height="102dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        android:text="No Past Activity is Found!"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>